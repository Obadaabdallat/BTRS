@model IEnumerable<BTRS.Models.Trip>

@{
    ViewData["Title"] = "PassengerIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>PassengerIndex</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BusNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TripDis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BusNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TripDis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bus.BusID)
            </td>
            <td>
                <a asp-action="AddtoMyTrips" asp-controller="Trips" asp-route-id="@item.TripID">Add</a> |
                <a asp-action="Details" asp-controller="Trips" asp-route-id="@item.TripID">Details</a> |
                <a asp-action="AddtoMyTrips" asp-route-id="@item.TripID">View Trips</a>

                
            </td>
        </tr>
}
    </tbody>
</table>
