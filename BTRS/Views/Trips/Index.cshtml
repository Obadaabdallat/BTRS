@model IEnumerable<BTRS.Models.Trip>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #f8f9fa; /* Light gray background */
    }

    .container {
        margin-top: 50px; /* Adjust the top margin for centering the content */
    }

    .table {
        background-color: #ffffff; /* White background for the table */
        border-radius: 8px; /* Rounded corners */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Subtle box shadow */
    }

        .table th {
            background-color: #343a40; /* Dark background for table header */
            color: #ffffff; /* White text for table header */
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f0f2f4; /* Alternate row background color */
    }

    .table a {
        color: #000000; /* Blue color for links */
    }

        .table a:hover {
            color: #0056b3; /* Darker blue on hover */
        }

    .btn-primary {
        background-color: #007bff; /* Blue color for primary button */
        border-color: #007bff; /* Matching border color */
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Darker blue on hover */
            border-color: #0056b3; /* Darker border color on hover */
        }
</style>

<div class="container">
    <h1 class="mb-4">Index</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
        <a asp-action="Index" asp-controller="Buses" class="btn btn-primary">Create Bus</a>
    </p>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BusNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TripDis)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BusNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TripDis)
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.TripID" class="btn btn-secondary btn-sm">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.TripID" class="btn btn-info btn-sm">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.TripID" class="btn btn-danger btn-sm">Delete</a>
                        @* <a asp-action="AddtoMyTrips" asp-route-id="@item.TripID" class="btn btn-success btn-sm">View Trips</a> *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
